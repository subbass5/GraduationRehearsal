<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="400dp">

    <ImageView
        android:id="@+id/img_profile"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_qr_scan"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="ชื่อ : "
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="textEnd"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_name"
            android:textSize="18sp"
            android:text="xxxxxxxxxxxxxx "
            android:layout_marginLeft="20dp"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="รหัสนักศึกษา : "
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="textEnd"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_std_id"
            android:textSize="18sp"
            android:text="xxxxxxxxxxxxxx "
            android:layout_marginLeft="20dp"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="เลขที่บัตร : "
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="textEnd"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_cardid"
            android:textSize="18sp"
            android:text="xxxxxxxxxxxxxx "
            android:layout_marginLeft="20dp"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="ห้องเรียน : "
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="textEnd"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_classroom"
            android:textSize="18sp"
            android:text="xxxxxxxxxxxxxx "
            android:layout_marginLeft="20dp"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="เบอร์โทร : "
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="textEnd"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_tel"
            android:textSize="18sp"
            android:text="xxxxxxxxxxxxxx "
            android:layout_marginLeft="20dp"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="อีเมล : "
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="textEnd"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_email"
            android:textSize="18sp"
            android:text="xxxxxxxxxxxxxx "
            android:layout_marginLeft="20dp"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <Button
           android:id="@+id/btn_close"
           android:backgroundTint="@color/bootstrap_brand_danger"
           android:text="ปิด"
           android:textColor="#FFF"
           android:layout_width="120dp"
           android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>