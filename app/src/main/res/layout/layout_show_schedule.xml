<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="230dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tv_lbl_place"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_place"
                android:textAlignment="textEnd"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_place"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:text="หอประชุม ไพรพยอม"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tv_lbl_date_time"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_date_time"
                android:textAlignment="textEnd"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_date_at"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:text="2018-09-01 13:00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_date_update"
            android:layout_marginTop="10dp"
            android:text="2018-09-01 13:00:00"
            android:textColor="@color/bootstrap_brand_danger"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="10sp"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="right"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_scan"
                android:layout_marginLeft="20dp"
                android:text="เช็คชื่อนักศึกษา"
                android:textColor="#FFF"
                android:backgroundTint="@color/bootstrap_brand_primary"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_close"
                android:text="ปิด"
                android:textColor="#FFF"
                android:backgroundTint="@color/bootstrap_brand_danger"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>